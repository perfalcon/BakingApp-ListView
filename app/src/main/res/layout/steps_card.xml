<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cv_step"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="@dimen/step_card_margin"
android:layout_marginRight="@dimen/step_card_margin"
android:foreground="?attr/selectableItemBackground"
card_view:cardCornerRadius="@dimen/step_corner_radius"
card_view:cardElevation="@dimen/step_card_elevation"
card_view:cardUseCompatPadding="true">
<TextView
    android:id="@+id/tv_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="@dimen/steps_card_textSize"
    android:textAlignment="center"
    android:text="@string/default_text" />
</android.support.v7.widget.CardView>