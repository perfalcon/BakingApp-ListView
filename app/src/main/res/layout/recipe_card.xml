<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recipe_card_margin"
        android:layout_marginRight="@dimen/recipe_card_margin"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/recipe_corner_radius"
        card_view:cardElevation="@dimen/recipe_card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/colorRecipeCard" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/default_text"
            android:textAlignment="center"
            android:textSize="@dimen/recipe_textSize" />

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_ImageHeight"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/recipe_ImageMarginTop"
            android:layout_marginTop="@dimen/recipe_ImageMarginBottom"
            android:elevation="@dimen/recipe_ImageElevation"
            android:paddingRight="@dimen/recipe_ImagePadding" />
    </RelativeLayout>



</android.support.v7.widget.CardView>
