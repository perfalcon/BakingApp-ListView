<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recipe_card_margin"
        android:layout_marginRight="@dimen/recipe_card_margin"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/recipe_corner_radius"
        card_view:cardElevation="@dimen/recipe_card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/colorRecipeCard" >

        <TextView
            android:id="@+id/text_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/recipe_textSize"
            android:textAlignment="center"
            android:text="@string/default_text" />


    </android.support.v7.widget.CardView>
